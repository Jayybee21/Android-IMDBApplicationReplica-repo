<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    >


    <ImageView
        android:id="@+id/listviewCategoryImg"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />


    <TextView
        android:id="@+id/listviewCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listviewCategoryImg"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Movie_Title"
        android:textSize="23dp"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/listviewCategoryRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listviewCategoryTitle"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="Movie_Rating"
        android:textColor="#a9a9a9"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="35dp" />

    <TextView
        android:id="@+id/listviewCategoryReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listviewCategoryTitle"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/listviewCategoryRating"
        android:text="Movie_Release_Date"
        android:textColor="#a9a9a9"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="35dp" />

</RelativeLayout>