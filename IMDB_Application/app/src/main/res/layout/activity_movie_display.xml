<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="410dp"
    android:layout_height="1000dp">


    <ImageView
        android:id="@+id/movie_imgDisplay"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@android:drawable/ic_menu_crop" />

    <TextView
        android:id="@+id/movie_titleDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_imgDisplay"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="Movie_Title"
        android:textSize="28dp"
        app:fontFamily="sans-serif-black" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_titleDisplay"
        android:layout_marginTop="20dp"
        android:text="Save" />
    <TextView
        android:id="@+id/movie_contentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAdd"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:textSize="15dp"
        android:text="Movie_Release_Date" />

    <TextView
        android:id="@+id/movie_contentRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_contentDate"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:text="Movie_Rating" />

    <TextView
        android:id="@+id/movie_summaryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_contentRating"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        app:fontFamily="sans-serif-black"
        android:text="Summary" />

    <TextView
        android:id="@+id/movie_contentSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_summaryTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Summary"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/movie_trailerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_contentSummary"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        app:fontFamily="sans-serif-black"
        android:text="Trailer" />
    <TextView
        android:id="@+id/movie_trailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_trailerTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/teal_700"
        android:textSize="15dp"
        android:text="trailer" />
    <TextView
        android:id="@+id/movie_keywordsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_trailer"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        app:fontFamily="sans-serif-black"
        android:text="Key Words" />
    <TextView
        android:id="@+id/movie_keywords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_keywordsTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:text="key_words" />

</RelativeLayout>
</ScrollView>